{
  "name": "sound-on-error",
  "displayName": "Sound on Error",
  "description": "Play a meme sound when terminal output matches error keywords.",
  "version": "0.1.3",
  "publisher": "AnujLabs",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "images/anujlabs.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "errors",
    "terminal",
    "sound",
    "meme"
  ],
  "main": "./extension.js",
  "extensionKind": [
    "ui"
  ],
  "scripts": {
    "check": "node --check extension.js",
    "package": "npx @vscode/vsce package",
    "publish:vsce": "npx @vscode/vsce publish"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:faah.selectCustomSound",
    "onCommand:faah.clearCustomSound",
    "onCommand:faah.playTestSound"
  ],
  "contributes": {
    "commands": [
      {
        "command": "faah.selectCustomSound",
        "title": "Faah: Select Custom Sound"
      },
      {
        "command": "faah.clearCustomSound",
        "title": "Faah: Clear Custom Sound"
      },
      {
        "command": "faah.playTestSound",
        "title": "Faah: Play Test Sound"
      }
    ],
    "configuration": {
      "title": "Faah",
      "properties": {
        "faah.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Faah sound notifications for terminal error keywords."
        },
        "faah.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Absolute or workspace-relative path to a custom sound file. Leave empty to use the default faah sound."
        },
        "faah.cooldownMs": {
          "type": "number",
          "default": 1200,
          "minimum": 0,
          "description": "Minimum delay in milliseconds between sound plays."
        }
      }
    }
  }
}